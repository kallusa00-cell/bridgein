
<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-300" id="main-header">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent-500 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
          <span class="text-white font-bold text-xl">B</span>
        </div>
        <span class="text-2xl font-display font-bold text-dark-800 group-hover:text-primary-600 transition-colors">
          Bridge<span class="text-primary-600">In</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href="/" class="nav-link <%= currentPath === '/' ? 'active' : '' %>">Home</a>
        <a href="/students" class="nav-link <%= currentPath.startsWith('/students') ? 'active' : '' %>">For Students</a>
        <a href="/employers" class="nav-link <%= currentPath.startsWith('/employers') ? 'active' : '' %>">For Employers</a>
        <a href="/students/resources" class="nav-link <%= currentPath === '/students/resources' ? 'active' : '' %>">Resources</a>
        <a href="/about" class="nav-link <%= currentPath === '/about' ? 'active' : '' %>">About</a>
      </div>

      <!-- CTA Buttons -->
      <div class="hidden lg:flex items-center space-x-4">
        <a href="/employers/contact" class="btn-outline btn-sm">Hire Talent</a>
        <a href="/students/plus" class="btn-primary btn-sm">Join Plus</a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="lg:hidden p-2 rounded-xl hover:bg-dark-100 transition-colors" id="mobile-menu-btn" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="py-4 space-y-2 border-t border-dark-100">
        <a href="/" class="block px-4 py-3 rounded-xl hover:bg-dark-50 font-medium <%= currentPath === '/' ? 'text-primary-600 bg-primary-50' : 'text-dark-700' %>">
          Home
        </a>
        <a href="/students" class="block px-4 py-3 rounded-xl hover:bg-dark-50 font-medium <%= currentPath.startsWith('/students') && currentPath !== '/students/resources' ? 'text-primary-600 bg-primary-50' : 'text-dark-700' %>">
          For Students
        </a>
        <a href="/employers" class="block px-4 py-3 rounded-xl hover:bg-dark-50 font-medium <%= currentPath.startsWith('/employers') ? 'text-primary-600 bg-primary-50' : 'text-dark-700' %>">
          For Employers
        </a>
        <a href="/students/resources" class="block px-4 py-3 rounded-xl hover:bg-dark-50 font-medium <%= currentPath === '/students/resources' ? 'text-primary-600 bg-primary-50' : 'text-dark-700' %>">
          Resources
        </a>
        <a href="/about" class="block px-4 py-3 rounded-xl hover:bg-dark-50 font-medium <%= currentPath === '/about' ? 'text-primary-600 bg-primary-50' : 'text-dark-700' %>">
          About
        </a>
        <div class="pt-4 space-y-2">
          <a href="/employers/contact" class="btn-outline w-full">Hire Talent</a>
          <a href="/students/plus" class="btn-primary w-full">Join Plus</a>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>
