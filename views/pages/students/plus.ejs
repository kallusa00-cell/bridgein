<!-- Features Grid -->
<section class="section bg-white">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl font-display font-bold text-dark-900 mb-6">
        Everything Included in Plus
      </h2>
      <p class="text-xl text-dark-500">
        A comprehensive program designed to accelerate your career journey.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% features.forEach((feature, index) => { %>
        <div class="card-hover p-8 animate-on-scroll" style="animation-delay: <%= index * 0.1 %>s;">
          <div class="text-4xl mb-4"><%= feature.icon %></div>
          <h3 class="text-xl font-bold text-dark-800 mb-3"><%= feature.title %></h3>
          <p class="text-dark-500"><%= feature.description %></p>
        </div>
      <% }); %>
    </div>
  </div>
</section>

