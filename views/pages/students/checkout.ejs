<!-- Checkout Page -->
<section class="section bg-gradient-mesh min-h-screen">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <div class="grid lg:grid-cols-5 gap-8">
        <!-- Checkout Form -->
        <div class="lg:col-span-3">
          <div class="card p-8">
            <h1 class="text-2xl font-display font-bold text-dark-900 mb-6">
              Complete Your Enrollment
            </h1>
            
            <form id="checkout-form" class="space-y-6">
              <!-- Personal Info -->
              <div>
                <h3 class="font-semibold text-dark-800 mb-4">Personal Information</h3>
                <div class="grid sm:grid-cols-2 gap-4">
                  <div>
                    <label for="firstName" class="label">First Name</label>
                    <input type="text" id="firstName" name="firstName" class="input" required>
                  </div>
                  <div>
                    <label for="lastName" class="label">Last Name</label>
                    <input type="text" id="lastName" name="lastName" class="input" required>
                  </div>
                </div>
              </div>
              
              <div>
                <label for="email" class="label">Email Address</label>
                <input type="email" id="email" name="email" class="input" required placeholder="you@email.com">
              </div>
              
              <div>
                <label for="phone" class="label">Phone Number (Optional)</label>
                <input type="tel" id="phone" name="phone" class="input" placeholder="+1 (555) 123-4567">
              </div>
              
              <!-- Payment Info -->
              <div class="pt-6 border-t border-dark-100">
                <h3 class="font-semibold text-dark-800 mb-4">Payment Information</h3>
                
                <div class="mb-4">
                  <label for="cardNumber" class="label">Card Number</label>
                  <div class="relative">
                    <input type="text" id="cardNumber" name="cardNumber" class="input pl-12" placeholder="1234 5678 9012 3456" required>
                    <div class="absolute left-4 top-1/2 -translate-y-1/2">
                      <svg class="w-6 h-6 text-dark-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                      </svg>
                    </div>
                  </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label for="expiry" class="label">Expiry Date</label>
                    <input type="text" id="expiry" name="expiry" class="input" placeholder="MM/YY" required>
                  </div>
                  <div>
                    <label for="cvc" class="label">CVC</label>
                    <input type="text" id="cvc" name="cvc" class="input" placeholder="123" required>
                  </div>
                </div>
              </div>
              
              <!-- Terms -->
              <div class="flex items-start gap-3">
                <input type="checkbox" id="terms" name="terms" class="mt-1 w-4 h-4 rounded border-dark-300 text-primary-600 focus:ring-primary-500" required>
                <label for="terms" class="text-sm text-dark-600">
                  I agree to the <a href="#" class="text-primary-600 hover:underline">Terms of Service</a> and <a href="#" class="text-primary-600 hover:underline">Privacy Policy</a>. I understand that my subscription will automatically renew monthly.
                </label>
              </div>
              
              <!-- Error Message -->
              <div id="error-message" class="hidden p-4 bg-red-50 border border-red-200 rounded-xl text-red-700"></div>
              
              <!-- Submit -->
              <button type="submit" class="btn-primary w-full btn-lg" id="submit-btn">
                <span id="btn-text">Pay $<%= pricing.monthly %>/month</span>
                <svg id="btn-loader" class="hidden animate-spin ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
              
              <p class="text-center text-dark-400 text-sm">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                Secure payment powered by Stripe
              </p>
            </form>
          </div>
        </div>
        
        <!-- Order Summary -->
        <div class="lg:col-span-2">
          <div class="card p-6 sticky top-28">
            <h2 class="text-lg font-bold text-dark-800 mb-4">Order Summary</h2>
            
            <div class="flex items-center gap-4 p-4 bg-dark-50 rounded-xl mb-6">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-accent-500 rounded-xl flex items-center justify-center">
                <span class="text-white text-xl">‚≠ê</span>
              </div>
              <div>
                <h3 class="font-semibold text-dark-800"><%= pricing.productName %></h3>
                <p class="text-dark-500 text-sm">Monthly subscription</p>
              </div>
            </div>
            
            <div class="space-y-3 mb-6">
              <div class="flex justify-between text-dark-600">
                <span>Monthly subscription</span>
                <span>$<%= pricing.monthly %>.00</span>
              </div>
              <div class="flex justify-between text-dark-600">
                <span>Tax</span>
                <span>$0.00</span>
              </div>
              <div class="h-px bg-dark-200"></div>
              <div class="flex justify-between text-lg font-bold text-dark-900">
                <span>Total today</span>
                <span>$<%= pricing.monthly %>.00 CAD</span>
              </div>
            </div>
            
            <div class="bg-secondary-50 rounded-xl p-4 mb-6">
              <h4 class="font-semibold text-secondary-800 mb-2">What's included:</h4>
              <ul class="space-y-2 text-sm text-secondary-700">
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  Expert-led cohort mentorship
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  Portfolio project guidance
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  Mock interview sessions
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  Priority job matching
                </li>
              </ul>
            </div>
            
            <p class="text-dark-400 text-xs text-center">
              You can cancel your subscription at any time from your account settings.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
