<!-- Resume Section -->
<section id="resume" class="section bg-white scroll-mt-36">
  <div class="container-custom">
    <div class="flex items-center gap-4 mb-10">
      <div class="w-14 h-14 bg-primary-100 rounded-2xl flex items-center justify-center">
        <span class="text-3xl">üìù</span>
      </div>
      <div>
        <h2 class="text-3xl font-display font-bold text-dark-900">Resume Writing</h2>
        <p class="text-dark-500">Learn how to create a resume that gets noticed</p>
      </div>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% resources.resume.forEach((resource, index) => { %>
        <div class="card-hover overflow-hidden animate-on-scroll" style="animation-delay: <%= index * 0.1 %>s;">
          <div class="aspect-video bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center">
            <% if (resource.type === 'video') { %>
              <div class="w-16 h-16 bg-white/80 rounded-full flex items-center justify-center shadow-lg">
                <svg class="w-8 h-8 text-primary-600 ml-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
                </svg>
              </div>
            <% } else if (resource.type === 'template') { %>
              <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            <% } else { %>
              <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H15"/>
              </svg>
            <% } %>
          </div>
          <div class="p-6">
            <div class="flex items-center gap-2 mb-3">
              <span class="badge-<%= resource.type === 'video' ? 'accent' : resource.type === 'template' ? 'secondary' : 'primary' %>">
                <%= resource.type.charAt(0).toUpperCase() + resource.type.slice(1) %>
              </span>
              <% if (resource.duration) { %>
                <span class="text-dark-400 text-sm"><%= resource.duration %></span>
              <% } %>
            </div>
            <h3 class="text-lg font-bold text-dark-800 mb-2"><%= resource.title %></h3>
            <p class="text-dark-500 text-sm mb-4"><%= resource.description %></p>
            <a href="#" class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition-colors">
              <% if (resource.type === 'video') { %>
                Watch Now
              <% } else if (resource.type === 'template') { %>
                Download
              <% } else { %>
                Read Article
              <% } %>
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

