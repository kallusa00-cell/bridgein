<!-- Hero Section -->
<section class="relative overflow-hidden bg-gradient-mesh py-20 md:py-28">
  <div class="absolute top-20 left-20 w-72 h-72 bg-secondary-400/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 right-20 w-96 h-96 bg-primary-400/20 rounded-full blur-3xl"></div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div>
        <span class="badge-secondary mb-6 animate-fade-in-down">For Employers</span>

        <h1 class="text-5xl md:text-6xl font-display font-bold text-dark-900 mb-6 animate-fade-in-up">
          Hire Top Talent. <span class="text-gradient-accent">Save Up to $10,000.</span>
        </h1>

        <p class="text-xl text-dark-500 mb-8 animate-fade-in-up" style="animation-delay: 0.1s;">
          Access pre-screened co-op students ready to contribute from day one. We handle the paperwork, you get
          qualified candidates delivered in 72 hours.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 animate-fade-in-up" style="animation-delay: 0.2s;">
          <a href="/employers/contact" class="btn-secondary btn-lg">
            Start Hiring
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
          <a href="#subsidies" class="btn-outline btn-lg">
            Learn About Subsidies
          </a>
        </div>
      </div>

      <!-- Right: Stats Card -->
      <div class="animate-fade-in-up" style="animation-delay: 0.3s;">
        <div class="bg-white rounded-3xl shadow-2xl p-8 relative">
          <div class="absolute -top-4 -right-4 bg-secondary-500 text-white px-4 py-2 rounded-full text-sm font-bold">
            Limited Funding Available
          </div>

          <h3 class="text-2xl font-bold text-dark-800 mb-6">Government Subsidy Calculator</h3>

          <div class="space-y-6">
            <!-- Salary -->
            <div>
              <div class="flex justify-between mb-2">
                <span class="text-dark-600">Student Salary (4 months)</span>
                <span class="font-bold text-dark-800">$10,000</span>
              </div>
              <div class="h-3 bg-dark-100 rounded-full overflow-hidden">
                <div class="h-full bg-dark-300 rounded-full" style="width: 100%"></div>
              </div>
            </div>

            <!-- SWPP Subsidy -->
            <div>
              <div class="flex justify-between mb-2">
                <span class="text-dark-600">Federal Subsidy (SWPP)</span>
                <span class="font-bold text-secondary-600">-$7,000</span>
              </div>
              <div class="h-3 bg-secondary-100 rounded-full overflow-hidden">
                <div class="h-full bg-secondary-500 rounded-full" style="width: 70%"></div>
              </div>
            </div>

            <!-- NEW: Tax Credit Note -->
            <div class="bg-primary-50 rounded-xl p-3 border border-primary-100">
              <div class="flex justify-between items-center mb-1">
                <span class="text-primary-700 font-semibold text-sm">Provincial Tax Credit</span>
                <span class="font-bold text-primary-600 text-sm">-$3,000</span>
              </div>
              <p class="text-xs text-primary-500 leading-tight">
                *Eligible employers may claim an additional tax credit up to $3,000.
              </p>
            </div>

            <div class="pt-4 border-t border-dark-100">
              <div class="flex justify-between items-center">
                <span class="text-lg font-semibold text-dark-700">Your Potential Net Cost</span>
                <span class="text-4xl font-display font-bold text-dark-900">$0<span
                    class="text-lg text-dark-400 font-normal">*</span></span>
              </div>
              <p class="text-dark-400 text-sm mt-1">Hire top talent for practically free.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Benefits Grid -->
<section class="section bg-white">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class="badge-primary mb-4">Why BridgeIn</span>
      <h2 class="text-4xl md:text-5xl font-display font-bold text-dark-900 mb-6">
        Built for Busy Hiring Managers
      </h2>
      <p class="text-xl text-dark-500">
        Stop wasting time on job boards. Get qualified, eager candidates delivered to you.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% benefits.forEach((benefit, index)=> { %>
<div class="card-hover p-8 animate-on-scroll <%= benefit.highlight ? 'border-2 border-secondary-500 relative' : '' %>" 
     style="animation-delay: <%= index * 0.1 %>s; <%= benefit.highlight ? 'overflow: visible;' : '' %>">
          <% if(benefit.highlight) { %>
            <div class="absolute -top-3 left-6 bg-secondary-500 text-white px-3 py-1 rounded-full text-xs font-bold">
              Top Benefit
            </div>
            <% } %>
              <div class="text-4xl mb-4">
                <%= benefit.icon %>
              </div>
              <h3 class="text-xl font-bold text-dark-800 mb-3">
                <%= benefit.title %>
              </h3>
              <p class="text-dark-500">
                <%= benefit.description %>
              </p>
        </div>
        <% }); %>
    </div>
  </div>
</section>

<!-- Subsidy Section -->
<section id="subsidies" class="section bg-gradient-secondary text-white scroll-mt-24">
  <div class="container-custom">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="animate-on-scroll">
        <span class="inline-block px-4 py-2 rounded-full bg-white/20 text-white text-sm font-semibold mb-6">
          Student Work Placement Program (SWPP)
        </span>
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
          Save Thousands on Every Hire
        </h2>
        <p class="text-xl text-white/80 mb-8">
          The Government of Canada wants to help you hire students. Through the SWPP, eligible employers receive
          significant wage subsidies.
        </p>

        <div class="grid sm:grid-cols-2 gap-6">
          <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
            <div class="text-4xl font-display font-bold mb-2">
              <%= subsidyInfo.standard.percentage %>%
            </div>
            <div class="text-white/90 font-semibold mb-1">Standard Subsidy</div>
            <div class="text-white/70 text-sm">Up to $<%= subsidyInfo.standard.maxAmount.toLocaleString() %> per
                placement</div>
          </div>

          <div class="bg-white/20 backdrop-blur-lg rounded-2xl p-6 border border-white/30">
            <div class="text-4xl font-display font-bold mb-2">
              <%= subsidyInfo.diversity.percentage %>%
            </div>
            <div class="text-white/90 font-semibold mb-1">Diversity Subsidy</div>
            <div class="text-white/70 text-sm">Up to $<%= subsidyInfo.diversity.maxAmount.toLocaleString() %> for
                underrepresented groups</div>
          </div>
        </div>

        <p class="text-white/60 text-sm mt-6">
          * Underrepresented groups include: women in STEM, Indigenous students, newcomers, persons with disabilities,
          visible minorities, and first-year students.
        </p>
      </div>

      <div class="animate-on-scroll" style="animation-delay: 0.2s;">
        <div class="bg-white rounded-3xl p-8 text-dark-800">
          <h3 class="text-2xl font-bold mb-6">Eligibility Requirements</h3>

          <div class="space-y-4">
            <h4 class="font-semibold text-dark-700">Employers must be:</h4>
            <ul class="space-y-2">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-secondary-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd" />
                </svg>
                <span class="text-dark-600">A registered Canadian business or non-profit</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-secondary-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd" />
                </svg>
                <span class="text-dark-600">Providing a quality work-integrated learning experience</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-secondary-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd" />
                </svg>
                <span class="text-dark-600">Able to pay the student for the placement duration</span>
              </li>
            </ul>

            <div class="h-px bg-dark-100 my-4"></div>

            <h4 class="font-semibold text-dark-700">Not eligible:</h4>
            <p class="text-dark-500 text-sm">Government agencies, hospitals, Crown corporations, post-secondary
              institutions, and financial institutions.</p>
          </div>

          <div class="mt-6 p-4 bg-primary-50 rounded-xl">
            <p class="text-primary-800 text-sm">
              <strong>Note:</strong> We help you navigate the eligibility requirements and application process. Contact
              us to learn more!
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- How It Works -->
<section id="how-it-works" class="section bg-dark-50 scroll-mt-24">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
      <span class="badge-primary mb-4">The Process</span>
      <h2 class="text-4xl md:text-5xl font-display font-bold text-dark-900 mb-6">
        Pre-Screened Candidates in 72 Hours
      </h2>
      <p class="text-xl text-dark-500">
        Our streamlined process gets you qualified candidates fast, with minimal effort on your part.
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-primary-200 hidden md:block"></div>

        <div class="space-y-8">
          <% processSteps.forEach((step, index)=> { %>
            <div class="flex gap-6 animate-on-scroll" style="animation-delay: <%= index * 0.1 %>s;">
              <div
                class="w-16 h-16 bg-primary-600 text-white rounded-2xl flex items-center justify-center text-2xl font-bold flex-shrink-0 relative z-10">
                <%= step.step %>
              </div>
              <div class="card p-6 flex-grow">
                <h3 class="text-xl font-bold text-dark-800 mb-2">
                  <%= step.title %>
                </h3>
                <p class="text-dark-500">
                  <%= step.description %>
                </p>
              </div>
            </div>
            <% }); %>
        </div>
      </div>
    </div>
  </div>
</section>

