{
  "name": "bridgein",
  "version": "1.0.0",
  "description": "BridgeIn - Connecting Co-op Students with Career Opportunities",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "concurrently \"nodemon app.js\" \"npm run watch:css\"",
